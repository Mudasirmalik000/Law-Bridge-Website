{
    "version": 2,
    "builds": [
        {
            "src": "api/index.php",
            "use": "@vercel/php"
        }
    ],
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/build/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "outputDirectory": "public",
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://your-vercel-app-name.vercel.app",
        "APP_KEY": "APP_KEY",

        "APP_LOCALE": "en",
        "APP_FALLBACK_LOCALE": "en",
        "APP_TIMEZONE": "UTC",

        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie",
        "CACHE_DRIVER": "array",

        "MAIL_MAILER": "smtp",
        "MAIL_HOST": "smtp-relay.brevo.com",
        "MAIL_PORT": "587",
        "MAIL_USERNAME": "7be31a003@smtp-brevo.com",
        "MAIL_PASSWORD": "SMTP_PASSWORD",
        "MAIL_ENCRYPTION": "tls",
        "MAIL_FROM_ADDRESS": "connectwithlawbridge@gmail.com",
        "MAIL_FROM_NAME": "Law Bridge Associates",
        "MAIL_EHLO_DOMAIN": "connectwithlawbridge",

        "VITE_APP_NAME": "Law Bridge Associates"
    }
}
